<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="viewport" content="width=device-width">

        @Styles.Render("~/bundles/styles/jqueryui", "~/bundles/styles/common")
        @Scripts.Render("~/bundles/scripts/modernizr")

    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="@Url.Action("Index", "Home")">Your logo here</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li><a href="#">Current Time: @DateTime.Now</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            
            <div data-pjax-container>
                <!-- Main hero unit for a primary marketing message or call to action -->
                <div class="hero-unit">
                    @RenderSection("featured", required: false)
                </div>
                @RenderBody()
            </div>

            <hr>

            <footer>
                <div class="content-wrapper">
                    <div class="pull-left">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                    </div>
                    <div class="pull-right">
                        <ul id="social">
                            <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                            <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                        </ul>
                    </div>
                </div>
            </footer>

        </div> <!-- /container -->

        @Scripts.Render("~/bundles/scripts/common")
        @Scripts.Render("~/bundles/scripts/application")
        @RenderSection("scripts", required: false)

    </body>
</html>





